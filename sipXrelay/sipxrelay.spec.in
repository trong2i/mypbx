Name: @PACKAGE@
Version: @VERSION@
Release: @PACKAGE_REVISION@

Summary: Native ITSP bridging solution for sipX
License: LGPL
Group:    Productivity/Telephony/SIP/Servers
Vendor: SIPfoundry
Packager: SIPfoundry <sipx-dev@sipfoundry.org>
Url: http://www.sipfoundry.org/sipXbridge

BuildRequires: automake
BuildRequires: java-1.7.0-openjdk-devel
BuildRequires: zip
BuildRequires: sipxcommons >= %version

Source: %name-%version.tar.gz

Requires: sipxcommserverlib >= %version
Requires: sipxcommons >= %version
Requires: chkconfig

%if %{?use_ibm_jvm}0
Requires: java-ibm >= 1.6
Requires: java-ibm-unrestricted
%endif

Prefix: %_prefix
BuildRoot: %{_tmppath}/%name-%version-root

%description
Native ITSP and media bridging solution for SIPX PBX.

%prep
%setup -q

%build
%configure @SIPX_RPM_CONFIGURE_OPTIONS@
cp config.log %name.configlog
make %{_smp_mflags} all

%install
export NO_BRP_CHECK_BYTECODE_VERSION=true
rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(644,root,root,755)
%{_datadir}/sipxecs/cfinputs/plugin.d/sipxrelay.cf
%attr(755,root,root) %{_sysconfdir}/sipxpbx/sipxrelay/sipxrelay.sec.erb
%attr(755,root,root) %{_sysconfdir}/init.d/sipxrelay
%attr(755,sipx,sipx) %{_datadir}/java/sipXecs/sipXbridge
%config(noreplace) %{_sysconfdir}/sipxpbx/sipxrelay/log4j.properties

%post
if grep -q :on <<<`/sbin/chkconfig sipxrelay --list 2>&1`; then
    /sbin/chkconfig sipxrelay reset
fi
